<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.abdielrosado.safecall">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- for the gcm -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!-- For Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- For Twilio -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="contact_management.ContactListManagement" />
        <activity
            android:name="contact_management.AddContactsActivity"
            android:label="@string/title_activity_add_contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="contact_management.RemoveContactsActivity"
            android:label="@string/title_activity_remove__contacts"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Countdown" />
        <!--<activity android:name="emergency_protocol.EmergencyManager" />-->

        <!--for twilio-->
        <activity android:name="twilio.TwilioCallActivity"/>
        <!--for Bluetooth-->
        <activity android:name="btcomm.BluetoothCommActivity" />
        <activity android:name="btcomm.SendAndGetDataActivity" />

        <!--for gcm-->
        <activity android:name="gcm.MessageReceiverActivity"/>

        <service
            android:name="fall_detection.FallDetectionManagement"
            android:enabled="true"
            android:exported="false"
            android:stopWithTask="true" />

        <!-- gcm_receiver -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="gcm" />
            </intent-filter>
        </receiver>

        <!-- gcm_listener -->
        <service
            android:name="gcm.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- instanceId_listener -->
        <service
            android:name="gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!--registration service-->
        <service
            android:name="gcm.RegistrationIntentService"
            android:exported="false" />
        <!--For twilio-->
        <service
            android:name="com.twilio.client.TwilioClientService"
            android:exported="false"
            android:stopWithTask="false" />
        <service
            android:name="twilio.TwilioCallService"
            android:exported="false"/>
    </application>

</manifest>
